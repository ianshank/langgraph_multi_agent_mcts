{
  "dashboard": {
    "title": "MCTS Framework - Agent Performance",
    "tags": ["mcts", "agents", "performance"],
    "timezone": "utc",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Agent Request Latency by Type",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(mcts_agent_request_latency_seconds_bucket[5m]))",
            "legendFormat": "P50 - {{agent_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mcts_agent_request_latency_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{agent_type}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(mcts_agent_request_latency_seconds_bucket[5m]))",
            "legendFormat": "P99 - {{agent_type}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Agent Success Rate",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(mcts_agent_requests_total{status=\"success\"}[5m]) / rate(mcts_agent_requests_total[5m])",
            "legendFormat": "{{agent_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Success Rate", "max": 1, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Agent Confidence Scores Distribution",
        "type": "heatmap",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 9},
        "targets": [
          {
            "expr": "rate(mcts_agent_confidence_score_bucket[5m])",
            "legendFormat": "{{agent_type}}",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets",
        "yAxis": {"format": "short", "label": "Confidence Score"}
      },
      {
        "id": 4,
        "title": "Requests per Agent Type",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 9},
        "targets": [
          {
            "expr": "rate(mcts_agent_requests_total[5m])",
            "legendFormat": "{{agent_type}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Average Agent Confidence by Type",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "avg(mcts_agent_confidence_score{agent_type=\"hrm\"})",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "value_and_name",
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.7, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "HRM Agent Metrics",
        "type": "table",
        "gridPos": {"h": 6, "w": 18, "x": 6, "y": 18},
        "targets": [
          {
            "expr": "mcts_agent_requests_total{agent_type=\"hrm\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {}
            }
          }
        ]
      }
    ]
  }
}
